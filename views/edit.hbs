{{!--edit--}}
<div class="container">
  <div class="card w-50 m-auto my-5">
    <div class="card-body">
      {{!-- title --}}
      <div>
        <h2 class="text-center mt-3">請修改你的支出</h2>
        <p>*為必填欄位</p>
      </div>

      {{!-- form-start --}}
      <form action="/records/{{ record._id }}?_method=PUT" method="POST">
        <div class="mb-3 row">
          <label for="name" class="col-sm-3 col-form-label">名稱*</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" placeholder="{{ record.name }}" name="name"
              value="{{ record.name }}" required>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="date" class="col-sm-3 col-form-label">日期*</label>
          <div class="col-sm-9">
            <input type="date" class="form-control" placeholder="{{ record.date }}" name="date"
              value="{{ record.date }}" required>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="category" class="col-sm-3 col-form-label">類別*</label>
          <div class="col-sm-9">
            <select class="form-select" name="category" required>
              <option value="{{ category.name }}" selected>{{ category.name }}</option>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其他">其他</option>
            </select>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="amount" class="col-sm-3 col-form-label">金額*</label>
          <div class="col-sm-9">
            <input type="number" class="form-control" placeholder="0" name="amount" value="{{ record.amount }}"
              required>
          </div>
        </div>

        <div class="text-end">
          <button type="submit" class="btn btn-success">完成</button>
          <a href="/" class="btn btn-outline-secondary">返回</a>
        </div>
      </form>
    </div>
  </div>
</div>